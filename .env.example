# GenSelfie Configuration
# Copy this to .env and fill in your values

# Admin password (auto-generated on first run if not set)
ADMIN_PASSWORD=

# ComfyUI server URL
COMFYUI_URL=http://localhost:8080

# Stripe (optional)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# LNbits (optional)
LNBITS_URL=
LNBITS_API_KEY=

# Public URL for Stripe redirects (required on RunPod)
# On RunPod, set this to your proxy URL, e.g.:
# PUBLIC_URL=https://abc123-8000.proxy.runpod.net
# The admin panel will auto-detect and show the correct URL when running on RunPod
PUBLIC_URL=

# Debug mode
DEBUG=false

# Data storage directory (default: /workspace for RunPod compatibility)
# Database will be stored at DATA_DIR/genselfie.db
# Uploads will be stored at DATA_DIR/uploads/
# For local development, set to a local path:
# DATA_DIR=./data
